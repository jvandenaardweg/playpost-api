    "/billing/products/{stripeProductId}": {
      "get": {
        "operationId": "getOneProduct",
        "tags": [
          "billing"
        ],
        "summary": "Gets one Product from Stripe using Stripe Product Id.",
        "security": [
          {
            "BearerAuth": []
          },
          {
            "ApiKeyAuth": [],
            "ApiSecretAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "stripeProductId",
            "schema": {
              "type": "string"
            },
            "required": true,
