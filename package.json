{
  "name": "readto-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "engines": {
    "node": "10.15.0",
    "npm": "6.5.0"
  },
  "scripts": {
    "dev": "npm run dev:database && concurrently \"npm run dev:nodemon\" \"npm run dev:worker\"",
    "dev:nodemon": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' --transpile-only src/index.ts",
    "dev:worker": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' --transpile-only src/worker.ts",
    "dev:database": "docker-compose up -d",
    "dev:docker:rebuild": "docker-compose up -d --force-recreate --build",
    "typeorm:seed": "ts-node src/database/seeder.ts",
    "build": "npm run build:typescript:production",
    "build:typescript": "npx tsc",
    "build:typescript:production": "npx tsc -p tsconfig.production.json",
    "start": "forever -m 5 dist/index.js",
    "worker": "forever -m 5 dist/worker.js",
    "test": "jest --silent",
    "test:watch": "jest --watch --silent",
    "test:integration:local": "BASE_API_URL=http://localhost:3000 jest --roots=./tests --runInBand --silent",
    "test:integration:staging": "BASE_API_URL=https://api-staging.postplay.app jest --roots=./tests --runInBand --silent",
    "test:integration:production": "BASE_API_URL=https://api.postplay.app jest --roots=./tests --runInBand --silent",
    "eslint": "./node_modules/eslint/bin/eslint.js *.js --ignore-path .gitignore",
    "eslint:fix": "./node_modules/eslint/bin/eslint.js *.js --ignore-path .gitignore --fix",
    "heroku-postbuild": "npm run build",
    "typeorm:schema:sync": "typeorm schema:sync",
    "typeorm:migration:revert": "typeorm migration:revert",
    "typeorm:migration:run": "typeorm migration:run",
    "upgrade-interactive": "npm-check --update",
    "typeorm:local:schema:sync": "ts-node ./node_modules/.bin/typeorm schema:sync"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jvandenaardweg/readto-api.git"
  },
  "author": "Jordy van den Aardweg",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jvandenaardweg/readto-api/issues"
  },
  "homepage": "https://github.com/jvandenaardweg/readto-api#readme",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.0.17",
    "@google-cloud/storage": "^2.4.2",
    "@google-cloud/text-to-speech": "^0.5.1",
    "@sentry/cli": "^1.40.0",
    "@sentry/node": "^4.6.4",
    "app-root-path": "^2.1.0",
    "aws-sdk": "^2.413.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "class-validator": "^0.9.1",
    "compression": "^1.7.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-async-errors": "^3.1.1",
    "express-brute": "^1.0.1",
    "express-brute-redis": "0.0.1",
    "express-rate-limit": "^3.4.0",
    "express-validator": "^5.3.1",
    "fluent-ffmpeg": "^2.1.2",
    "forever": "^0.15.3",
    "fs-extra": "^7.0.1",
    "helmet": "^3.15.1",
    "ioredis": "^4.6.2",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.0",
    "md5": "^2.2.1",
    "music-metadata": "^3.5.3",
    "node-fetch": "^2.3.0",
    "normalize-url": "^4.2.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.8.1",
    "polly-ssml-split": "^0.1.0",
    "rate-limit-redis": "^1.6.0",
    "reflect-metadata": "^0.1.13",
    "response-time": "^2.3.2",
    "typeorm": "^0.2.14",
    "typescript-tslint-plugin": "^0.3.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "0.0.36",
    "@types/express": "^4.16.1",
    "@types/express-brute": "0.0.37",
    "@types/express-brute-redis": "0.0.1",
    "@types/express-rate-limit": "^3.3.0",
    "@types/fluent-ffmpeg": "^2.1.9",
    "@types/fs-extra": "^5.0.5",
    "@types/helmet": "0.0.42",
    "@types/ioredis": "^4.0.10",
    "@types/jest": "^24.0.9",
    "@types/joi": "^14.3.2",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/md5": "^2.1.33",
    "@types/node": "^11.10.4",
    "@types/node-fetch": "^2.1.6",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/response-time": "^2.3.3",
    "@types/uuid": "^3.4.4",
    "@types/ws": "^6.0.1",
    "concurrently": "^4.1.0",
    "eslint": "^5.15.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^24.1.0",
    "nodemon": "^1.18.10",
    "npm-check": "^5.9.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tsc-watch": "^2.1.2",
    "tslint": "^5.13.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.3.3333"
  }
}
